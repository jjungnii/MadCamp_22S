<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TabbedActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1F5F5B</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">#4D1F5F5B</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TabbedActivity.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TabbedActivity.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/bebas_neue</item>
        <item name="android:textSize">20dp</item>
    </style>


    <style name="Theme.TabbedActivity.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>